<div class='row'>
    <div class='col s12'>
        <h3 class='center-align'><%= @course.name %></h3>
    </div>
    <div class="col s12 m12">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <p><%= @course.description %></p>
                <hr>
                <% if logged_in? && !current_user.courses.include?(@course) %>
                    <%= link_to 'ENROLL', course_enroll_path(course_id: @course.id), method: :post, class: 'pink-text' %> |
                <% end %>
                <%= link_to 'VIEW ALL', root_path, class: 'pink-text'%>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <h4 class='center-align'>Active students(<%=@course.students.count%>)</h4>
    <% @course.students.each do |student| %>
        <div class="col s6 m3">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title"><%= student.name %></span>
                </div>
            </div>
        </div>
    <% end %>
</div>