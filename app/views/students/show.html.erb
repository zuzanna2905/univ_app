<div class='container'>
    <div class='row center'>
        <div class='col s12 m12 l12'>
            <div class='card'>
                <div class="card-content">
                    <span class="card-title">Name: <%= @student.name%></span>
                    <p>Email: <%= @student.email%></p>
                </div>
                <div class="card-action">
                    <p>Current Enrollments</p>
                </div>
            </div>
        </div>
        <%= link_to '<i class="material-icons right">create</i>Edit your profile'.html_safe, edit_student_path(@student), class: 'btn'%>
    </div>
</div>