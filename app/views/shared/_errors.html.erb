<% if obj.errors.any? %>
    <div class='container'>
        <div class='row sign-up-form'>
            <div class='col s12 m12 l12'>
                <div class='card-panel red lighten-2'>
                    <span class='white-text'>
                        <strong><%= pluralize(obj.errors.count, 'error') %>
                        prohibited your profile from being created
                        </strong>
                        <ul>
                            <% obj.errors.full_messages.each do |error| %>
                                <li><%= error %>
                            <% end %>
                        </ul>
                    </span>
                </div>
            </div>
        </div>
    </div>
<% end%>